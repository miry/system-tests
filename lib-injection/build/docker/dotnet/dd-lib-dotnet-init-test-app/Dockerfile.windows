ARG RUNTIME

# We only ship the published app in the image
# so we only use ASPNET runtime as the base-image
FROM mcr.microsoft.com/dotnet/aspnet:7.0-windowsservercore-ltsc2019 AS base
WORKDIR /app
EXPOSE 80

FROM --platform=$BUILDPLATFORM mcr.microsoft.com/dotnet/sdk:7.0.100-preview.2 AS build
WORKDIR /app
COPY MinimalWebApp.csproj .
RUN dotnet restore
COPY . .
RUN dotnet build -c Release

FROM build AS publish
RUN dotnet publish -c Release -o /publish -r win10-x64

FROM base AS final
WORKDIR /app
COPY --from=publish /publish .

ENTRYPOINT ["dotnet", "MinimalWebApp.dll"]